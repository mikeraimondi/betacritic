<%- if user_signed_in? %>
  <%= link_to 'Add a new movie', new_movie_path %>
<%- end %>

<%- @movies.each do |movie| %>
  <br />
  <br />
  <%= link_to(movie) do %>
    <%= movie.title %>
    <%= "(#{movie.year})" %>
  <% end %>

  <%- if user_signed_in? %>
    <%= simple_form_for([movie, movie.likes.new]) do |f| %>
      <%- if current_user.likes_movie?(movie) %>
        <%= link_to 'Unlike movie', movie_like_path(movie, current_user.like_for(movie).id), method: :delete %>
      <%- else %>
        <%= f.submit 'Like movie' %>
      <% end %>
    <% end %>
  <% end %>

  <%= "#{pluralize(movie.likes.count, 'like')}" %>

<% end %>

<%= render 'shared/recently_added_movies' %>